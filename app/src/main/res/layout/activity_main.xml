<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_bg"
        android:padding="15dp">

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_search_black_24dp"
            android:tint="@android:color/darker_gray" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toStartOf="@+id/img_filter"
            android:layout_toEndOf="@+id/img_search"
            android:background="@android:color/transparent"
            android:hint="Find Restaurants" />

        <ImageView
            android:id="@+id/img_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_controls"
            android:tint="@android:color/darker_gray" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <devsnik.com.foodybite.utils.customui.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Trending Restaurants"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:fontName="@string/font_roboto_regular" />

        <devsnik.com.foodybite.utils.customui.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="See all (45)" />

    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/row_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/a" />
                <devsnik.com.foodybite.utils.customui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/roung_bg"
                    android:elevation="2dp"
                    android:paddingStart="5dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="2dp"
                    android:text="OPEN"
                    android:textColor="@android:color/holo_green_dark"
                    app:fontName="@string/font_roboto_bold" />

                <devsnik.com.foodybite.utils.customui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/roung_bg"
                    android:elevation="2dp"
                    android:paddingStart="5dp"
                    android:paddingTop="2dp"
                    android:drawableStart="@drawable/ic_star_black_24dp"
                    android:drawableTint="#FFEB3B"
                    android:drawablePadding="6dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="2dp"
                    android:text="4.5"
                    android:textColor="@android:color/black"
                    app:fontName="@string/font_roboto_bold" />


            </RelativeLayout>



            <RelativeLayout
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <devsnik.com.foodybite.utils.customui.CustomTextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/row_title"
                    android:text="Happy Bones"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    app:fontName="@string/font_roboto_regular" />

                <devsnik.com.foodybite.utils.customui.CustomTextView
                    android:layout_toEndOf="@+id/row_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/type_bg_gradient"
                    android:elevation="2dp"
                    android:paddingStart="5dp"
                    android:paddingTop="1dp"
                    android:textSize="12sp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="1dp"
                    android:text="Italian"
                    android:textColor="@android:color/white"
                    app:fontName="@string/font_roboto_regular" />


            </RelativeLayout>

            <devsnik.com.foodybite.utils.customui.CustomTextView
                android:text="394 Broome St, New York, NY 10013, USA"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontName="@string/font_roboto_regular" />


        </LinearLayout>

    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <devsnik.com.foodybite.utils.customui.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Category"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:fontName="@string/font_roboto_regular" />

        <devsnik.com.foodybite.utils.customui.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="See all (9)" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/a"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:alpha="0.6"
                android:background="@drawable/bg_gradient1"/>

            <devsnik.com.foodybite.utils.customui.CustomTextView
                android:text="Italian"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                app:fontName="@string/font_roboto_regular" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <devsnik.com.foodybite.utils.customui.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Friends"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:fontName="@string/font_roboto_regular" />

        <devsnik.com.foodybite.utils.customui.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="See all (56)" />

    </RelativeLayout>



</LinearLayout>